@using BehzistiMaskan.Models
@model BehzistiMaskan.ViewModels.LoginViewModel
@{
    ViewBag.Title = "ورود کارشناس - سامانه مسکن بهزیستی استان فارس";
    Layout = null;
}


<!doctype html>
<html class="fixed">
<head>
    <!-- Basic -->
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="Behzisti Fars - Maskan MIS" />
    <meta name="description" content="سامانه مسکن مددجویان بهزیستی استان فارس">
    <meta name="author" content="Ali Amanzadegan علی امان زادگان">
    <!-- طراح و سازنده این سامانه علی امان زادگان می باشد. استفاده از تمام یا بخشی از این سامانه بدون اجازه سازنده غیر قانونی می باشد -->
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Vendor CSS -->
    <link href="~/Assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Assets/vendor/magnific-popup/magnific-popup.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Assets/stylesheets/theme-custom.css">

    <!-- Head Libs -->
    <script src="~/Assets/javascripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                <img src="~/Assets/images/behzisti-logo-with-text-orange-H50px.png" height="50" alt="سامانه مسکن بهزیستی استان فارس" />

            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> ورود به سیستم</h2>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group mb-lg">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label pull-right" })
                        <div class="input-group input-group-icon">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg" })
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-user"></i>
                                </span>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-lg">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label pull-right" })
                        <div class="input-group input-group-icon">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg" })
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="row">
                        <div class="col-sm-6 text-left">
                            <button type="submit" class="btn btn-primary hidden-xs">ورود به سیستم</button>
                            <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">ورود به سیستم</button>
                        </div>
                        <div class="col-sm-6 text-right">
                            <div class="checkbox-custom checkbox-default">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    }


                </div>
            </div>

            <p class="text-center text-muted mt-md mb-md">&copy; تمامی حقوق برای سازنده و اداره کل بهزیستی فارس محفوظ است. </p>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Assets/vendor/magnific-popup/magnific-popup.js"></script>

</body>
</html>