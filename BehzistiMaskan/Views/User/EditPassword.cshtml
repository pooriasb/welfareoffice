@model BehzistiMaskan.ViewModels.UserFormViewModel
@{
    ViewBag.Title = "تغییر رمز عبور کاربر";
    Layout = "../Shared/_LayoutPorto.cshtml";
}

<header class="page-header">
    <h2>@ViewBag.Title</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="@Url.Action("Index", "Dashboard")">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li>
                <a href="@Url.Action("IncompleteRegisterList", "Client")">
                    لیست افراد
                </a>
            </li>
            <li><span>@ViewBag.Title</span></li>
        </ol>
    </div>
</header>

<!-- start: page -->
<div class="row" id="page">
    <div class="col-md-12">
        @using (Html.BeginForm("SetNewPassword", "User", FormMethod.Post, new { @class = "form form-bordered", @name = "setNewPasswordForm" }))
            {
            @Html.AntiForgeryToken()

            <section class="panel">
                <header class="panel-heading">
                       تغییر رمز عبور کاربر
                </header>
                <div class="panel-body">
                    <div class="alert alert-info">
                        کاربر محترم!<br />

                        شما در حال تغییر رمز کاربر با مشخصات زیر می باشید.
                    </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <td>کد یکتای کاربر</td>
                                <td>نام کاربر</td>
                                <td>نام</td>
                                <td>نام خانوادگی</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.UserId</td>
                                <td>@Model.UserName</td>
                                <td>@Model.UserInfo.Name</td>
                                <td>@Model.UserInfo.Family</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Password, new {@class = "control-label"})
                                @Html.PasswordFor(m => m.Password, new {@class = "form-control text-dir-ltr" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label"})
                                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control text-dir-ltr"})
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>

                        </div>

                    </div>
                </div>
                <div class="panel-footer">
                    @Html.HiddenFor(p => p.UserId)
                    <a class="btn btn-default" href="@Url.Action("Index", "User")">برگشت به لیست</a>
                    <button class="btn btn-success" id="editPasswordBtn" type="submit"><i class="fa fa-remove"></i> تغییر رمز عبور</button>
                </div>
            </section>
        }
    </div>
</div>
<!-- end: page -->

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}
